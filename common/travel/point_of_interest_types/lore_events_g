lore_event_g = {
    build_province_list = {
        province:9734 = { #Gogossos
            add_to_list = provinces
        }

        province:9735 = { #Sapphire Quarter
            add_to_list = provinces
        }

        province:9736 = { #Crimson Gate
            add_to_list = provinces
        }

        province:9715 = { #Pit of Sorrow
            add_to_list = provinces
        }

        province:9693 = { #Malice Garden 
            add_to_list = provinces
        }
    }   
}

on_visit = {
    switch = {
        trigger = location
        province:9734 = { root = { trigger_event = lore_event_g.1 } } #Gogossos
        province:9735 = { root = { trigger_event = lore_event_g.2 } } #Sapphire Quarter
        province:9736 = { root = { trigger_event = lore_event_g.3 } } #Crimson Gate
        province:9715 = { root = { trigger_event = lore_event_g.4 } } #Pit of Sorrow
        province:9693 = { root = { trigger_event = lore_event_g.5 } } #Malice Garden
    }

}
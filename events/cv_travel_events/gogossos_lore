namespace = lore_g

lore_g.1 = {
    type = character_event
    title = lore_g.1_t
    desc = lore_g.1_desc

    left_portrait = {
        character = root
        animation = thinking
    }

    trigger = {
        location = province:9734 #Gogossos
		current_travel_plan.travel_plan_owner = root
		is_ruler = yes
		is_location_valid_for_travel_event_on_land = yes
		location = {
			geographical_region = world_gogossos
		}
	}
    option = {
        name = lore.1
    }


}

